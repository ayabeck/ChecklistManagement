-#チェックボックス
.media.sorted-item{ id: "itemid_#{ item.id }" }
  .media-body.media-middle
    .col-sm-offset-4.col-sm-8
      .media.icon-checkbox
        .media-left.media-middle.checkbox
          %label
            %input{ type: 'checkbox' }
            %span
        .media-body.media-middle
          = auto_link_text(item.label)
  .media-right.media-middle.text-nowrap
    = option_link_to(item, sortable)
