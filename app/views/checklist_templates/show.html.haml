.row
  .col-xs-7
    %ol.breadcrumb
      %li= link_to t('activerecord.models.checklist_template'), checklist_templates_path
      %li.active 詳細
  .col-xs-5
    .text-right.link-button-group
      = link_to '割り当て', new_checklist_template_checklist_path(@checklist_template), { role: 'button', class: 'btn btn-default' }
  .col-xs-12
    .page-header
      %h3
        = @checklist_template.title
        %small= link_to '編集', edit_checklist_template_path(@checklist_template)

.row
  .col-xs-6
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.checklist_template.id')
      %dd= @checklist_template.id
      %dt= t('activerecord.attributes.checklist_template.checklists_count')
      %dd= @checklist_template.checklists_count
  .col-xs-6
    %dl.dl-horizontal
      %dt= t('activerecord.attributes.checklist_template.created_at')
      %dd= @checklist_template.created_at
      %dt.hidden-xs= t('activerecord.attributes.checklist_template.creator')
      %dd.hidden-xs= @checklist_template.creator
      %dt= t('activerecord.attributes.checklist_template.updated_at')
      %dd= @checklist_template.updated_at
      %dt.hidden-xs= t('activerecord.attributes.checklist_template.updater')
      %dd.hidden-xs= @checklist_template.updater
  .col-xs-12
    .panel.panel-default
      .panel-body= @checklist_template.description

%hr.separator

= render 'check_form'
