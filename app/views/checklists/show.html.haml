.row
  .col-xs-7
    %ol.breadcrumb
      %li= link_to 'チェックリスト', checklists_path
      %li.active 詳細
  .col-xs-5
    .text-right
      = link_to '保存', '#', { role: 'button', class: 'btn btn-default' }
      = link_to '提出', '#', { role: 'button', class: 'btn btn-default' }
  .col-xs-12
    .page-header
      %h3
        = @checklist.title
        %small= link_to '編集', edit_checklist_path(@checklist)

.row
  .col-xs-6
    %dl.dl-horizontal
      %dt  チェック番号
      %dd= @checklist.id
      %dt  開始
      %dd= @checklist.start_at
      %dt  期限
      %dd= @checklist.due_at
      %dt  担当者
      %dd= @checklist.checker
  .col-xs-6
    %dl.dl-horizontal
      %dt  ステータス
      %dd
        .progress{ style: 'margin-bottom: 0;' }
          .progress-bar.progress-bar-success{ role: 'progressbar', aria: { valuenow: '20', valuemin: '0', valuemax: '100' }, style: 'width: 20%;' }20%
      %dt  提出日
      %dd= @checklist.submit_at
      %dt  提出者
      %dd= @checklist.submitter

%hr.separator

= render 'check_form'
