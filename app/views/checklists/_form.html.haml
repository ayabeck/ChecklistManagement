= form_for @checklist do |f|
  - if @checklist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@checklist.errors.count, "error")} prohibited this checklist from being saved:"
      %ul
        - @checklist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :checker
    = f.text_field :checker
  .field
    = f.label :start_at
    = f.datetime_select :start_at
  .field
    = f.label :due_at
    = f.datetime_select :due_at
  .field
    = f.label :submitter
    = f.text_field :submitter
  .field
    = f.label :submit_at
    = f.datetime_select :submit_at
  .actions
    = f.submit 'Save'
